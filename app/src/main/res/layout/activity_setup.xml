<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#85d3e4"
    tools:context="com.wakeable.avengers.alarm_1_0.SetupActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_marginTop="-20dp"
        android:layout_height="200dp"
        android:id="@+id/setupSun"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sun_logo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/welcome"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/setupSun"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <View
        android:layout_width="300dp"
        android:layout_height="2dip"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:layout_below="@id/welcome"
        android:layout_marginTop="10dp"
        android:id="@+id/hr" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:id="@+id/oneCircle"
        android:layout_below="@+id/hr"
        android:src="@drawable/one_circle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/setup_one"
        android:id="@+id/plugin"
        android:textSize="20sp"
        android:minLines="2"
        android:textColor="#FFFFFF"
        android:layout_below="@id/oneCircle"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:id="@+id/twoCircle"
        android:layout_below="@+id/plugin"
        android:src="@drawable/two_circle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/setup_two"
        android:id="@+id/sync"
        android:textSize="20sp"
        android:minLines="2"
        android:textColor="#FFFFFF"
        android:layout_below="@id/twoCircle"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_button"
        android:id="@+id/snooze"
        android:onClick="findWakeable"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/charcoal"
        android:background="@drawable/button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
</RelativeLayout>
